{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "eu-west-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn-ami-hvm-*",
          "root-device-type": "ebs"
        },
        "owners": ["137112412989"],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "packer-ami {{timestamp}}",
      "tags": {
      "Name": "webserver",
      "Project": "testing"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts",
      "destination": "/home/ec2-user/"
    },    
    {
      "type": "shell",
      "scripts": [
        "scripts/prepare.sh"
      ]
    },
    {
      "type": "file",
      "source": "ansible",
      "destination": "/home/ec2-user/"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/provision_host.yml",
      "playbook_dir": "ansible"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ]
}

